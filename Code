    <script>
        function showResult(text) {
            const resultBox = document.getElementById('result-text');
            resultBox.style.opacity = 0; // Efecto de desvanecimiento
            setTimeout(() => {
                resultBox.innerHTML = text;
                resultBox.style.opacity = 1; // Efecto de aparición
            }, 300);
        }
    </script>

